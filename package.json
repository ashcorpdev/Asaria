{
  "name": "asaria",
  "version": "1.4.0",
  "description": "NodeCG-based on-screen overlay system for War of the Wisps",
  "homepage": "https://ashcorp.dev",
  "author": {
    "name": "Ashen",
    "email": "ashen@ashen.live",
    "url": "https://ashcorp.dev"
  },
  "files": [
    "dashboard",
    "graphics",
    "extension.js"
  ],
  "keywords": [
    "",
    "nodecg-bundle"
  ],
  "nodecg": {
    "compatibleRange": "^1.7.0",
    "dashboardPanels": [
      {
        "name": "asaria-control-panel",
        "title": "Asaria Control Panel",
        "file": "asaria-alliances.html",
        "fullbleed": true,
        "headerColor": "#9146ff"
      }
    ],
    "graphics": [
      {
        "file": "index.html",
        "width": 1280,
        "height": 720
      },
      {
        "file": "index2.html",
        "width": 1280,
        "height": 720
      }
    ],
    "assetCategories": [
      {
        "name": "shields",
        "title": "Shields",
        "allowedTypes": [
          "jpg",
          "jpeg",
          "gif",
          "png"
        ]
      }
    ]
  },
  "repository": "git@gitlab.com:ashen_gaming/asaria.git",
  "license": "Apache-2.0",
  "dependencies": {
    "bulma": "^0.8.2",
    "bulma-extensions": "^6.2.7",
    "node-sass": "^4.14.1",
    "tmi.js": "^1.7.2",
    "twitch": "^3.7.1",
    "twitch-chat-client": "^3.7.3",
    "twitch-pubsub-client": "^3.7.2",
    "twitch-webhooks": "^3.7.3"
  },
  "scripts": {
    "css-build": "node-sass --omit-source-map-url dashboard/sass/mystyles.scss dashboard/css/mystyles.css",
    "css-watch": "npm run css-build -- --watch",
    "start": "npm run css-watch"
  }
}
